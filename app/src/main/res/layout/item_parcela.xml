<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#E6E9F3"
    app:barrierMargin="20dp"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvinformacionParcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Información Parcela"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvNombreLeyenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            app:layout_constraintTop_toBottomOf="@+id/tvinformacionParcela"
            android:text="Nombre Parcela: "
            android:textStyle="bold"
            tools:text="Nombre Parcela: "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/tvNombreLeyenda"
            app:layout_constraintTop_toBottomOf="@+id/tvinformacionParcela"
            tools:text="Nombre"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvcantLeyenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            app:layout_constraintTop_toBottomOf="@+id/tvNombreLeyenda"
            android:text="Cantidad de Arboles: "
            android:textStyle="bold"
            tools:text="Cantidad de Arboles: "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvcantArb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/tvcantLeyenda"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre"
            tools:text="Cantidad de Arboles"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvdiametroLeyenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            app:layout_constraintTop_toBottomOf="@+id/tvcantLeyenda"
            android:text="Diametro (cm): "
            android:textStyle="bold"
            tools:text="Diametro promedio: "
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/tvdiametro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvcantArb"
            app:layout_constraintStart_toEndOf="@+id/tvdiametroLeyenda"
            tools:text="Diametro"
            tools:ignore="MissingConstraints"/>


        <TextView
            android:id="@+id/tvalturaLeyenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            app:layout_constraintTop_toBottomOf="@+id/tvdiametroLeyenda"
            android:text="Altura (m): "
            android:textStyle="bold"
            tools:text="Altura promedio: "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvaltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvdiametro"
            app:layout_constraintStart_toEndOf="@+id/tvalturaLeyenda"
            tools:text="Altura Promedio"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/tvtipoleyenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            app:layout_constraintTop_toBottomOf="@+id/tvalturaLeyenda"
            android:text="Tipo: "
            android:textStyle="bold"
            tools:text="Tipo de Arbol: "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvaltura"
            app:layout_constraintStart_toEndOf="@+id/tvtipoleyenda"
            tools:text="Tipo de Arbol"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/tvedadleyenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            app:layout_constraintTop_toBottomOf="@+id/tvtipoleyenda"
            android:text="Edad promedio (años): "
            android:textStyle="bold"
            tools:text="Edad promedio: "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/edadArb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tipo"
            app:layout_constraintStart_toEndOf="@+id/tvedadleyenda"
            tools:text="Edad"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/tvdireleyenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            app:layout_constraintTop_toBottomOf="@+id/tvedadleyenda"
            android:text="Direccion: "
            android:textStyle="bold"
            tools:text="Direccion: "
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/DirePa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edadArb"
            app:layout_constraintStart_toEndOf="@+id/tvdireleyenda"
            tools:text="Direccion de Campo"
            tools:ignore="MissingConstraints"/>

        <Space
            android:id="@+id/idespa"
            app:layout_constraintTop_toBottomOf="@+id/DirePa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            app:layout_constraintTop_toBottomOf="@+id/idespa"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>