<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MisReportesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mis Reportes"
                android:textColor="@color/barra_menu"
                android:textSize="25sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/vTitulo"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/barra_menu" />

            <TextView
                android:id="@+id/tvSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Tabla de Datos totales"
                android:textColor="@color/contor_general"
                android:textSize="25sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTablaGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="8dp"
                    app:barrierMargin="20dp"
                    app:cardBackgroundColor="#E0F7FA"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="20dp">

                        <TableLayout
                            android:id="@+id/tlParcelas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:dividerPadding="4dp"
                                android:elevation="10dp">

                                <TextView
                                    android:id="@+id/tvNombreParcela"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Parcela"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvHectareas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:text="Hectáreas"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvCantArboles"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:text="Árboles"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TvPeso"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:gravity="end"
                                    android:text="Peso"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvVolumen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:gravity="end"
                                    android:text="Volumen"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvCo2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:gravity="end"
                                    android:text="Co2 Anual"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvRentabilidad"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="40dp"
                                    android:gravity="end"
                                    android:text="Valoración"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/Industria"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:gravity="center"
                                    android:text="Industria"
                                    android:textColor="@color/barra_menu"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />
                            </TableRow>
                        </TableLayout>
                    </ScrollView>

                </androidx.cardview.widget.CardView>


            </HorizontalScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSubtitulo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:text="Selección de gráficos"
                        android:textColor="@color/texto_inicio"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="220dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="15dp"
                        android:background="@color/texto_inicio"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDropDownGrafico"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Gráficos"
                        app:startIconDrawable="@drawable/ic_grafico"
                        app:startIconTint="@color/barra_menu"
                        app:endIconTint="@color/barra_menu"
                        android:textColorHint="@color/barra_menu">

                        <AutoCompleteTextView
                            android:id="@+id/acGráficosDisponibles"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:dropDownWidth="390dp"
                            android:dropDownHeight="300dp"
                            android:inputType="none"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:text="Selección de gráficos"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:id="@+id/vHorizontal1"
                        android:layout_width="390dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/black_semi_transparent" />
